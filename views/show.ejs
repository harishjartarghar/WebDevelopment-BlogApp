<%- include("partials/header")%>

<div class="ui main text container segment" style="background:rgb(0, 0, 0);">
    <div class="ui huge header" style="color: white;"><%=blog.title%></div>
    <div class="ui top attached segment">
        <div class="item">
            <img src="<%=blog.image%>" class="ui centered rounded image">
            <div class="content">
                    <span><b><%=blog.Date.toDateString()%></b></span>
            </div>
            <div class="description">
                <p><%=blog.decription%></p>
            </div>
            

        </div>
        
    </div>
    <a class="ui basic orange button" href="/blogs/<%=blog.id%>/edit" style="margin-top: 8px;"> Edit</a>
    <a class="ui basic orange button" href="/blogs" style="float: right;margin-top: 8px; "> Back</a>
    <form action="/blogs/<%=blog._id%>?_method=DELETE" method="post" class="delete">
        <button  class="ui basic red button delete" style="margin-top:8px;">Delete</button>
    </form>
</div>
<%-include("partials/footer") %>